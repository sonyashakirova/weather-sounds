{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "eqeqeq": ["error", "allow-null"],
    "indent": ["error", 2],
    "no-var": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": "error",
    "no-use-before-define": "error",
    "prefer-const": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}
